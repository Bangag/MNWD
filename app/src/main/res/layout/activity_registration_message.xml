<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    tools:context="org.mnwd.mnwd.RegistrationMessage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="A password was sent to your email address."
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:id="@+id/idTxtRegMessage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/idTxtLoginLink"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/idTxtRegMessage"
        android:textColor="#4DA6FF" />

</RelativeLayout>
