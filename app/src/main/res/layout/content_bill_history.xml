<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.mnwd.mnwd.BillHistory"
    tools:showIn="@layout/app_bar_bill_history">

    <TextView
        android:text="Table View"
        android:id="@+id/billhistory_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/billhistory_tabletitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billhistory_heading"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:text="Billing Date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0086c3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="15dp"
            android:layout_weight="34"/>

        <TextView
            android:text="Consumption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0086c3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="15dp"
            android:layout_weight="33" />

        <TextView
            android:text="Bill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0086c3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="15dp"
            android:layout_weight="33"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_billhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billhistory_tabletitle"/>

</RelativeLayout>