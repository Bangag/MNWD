<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mnwd.mnwd.ChooseAccount">

    <TextView
        android:id="@+id/idTxtChooseAccount"
        android:text="Choose Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/idSpinnerLoginAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/idTxtChooseAccount"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/idBtnLoginAccount"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idSpinnerLoginAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@color/colorPrimary" />
</RelativeLayout>