<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="16dp"
    tools:context="org.mnwd.mnwd.MainActivity">

    <TextView
        android:text = "Login"
        android:textSize = "30sp"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/idtxtLogin"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/idEditEmailAd"
        android:hint = "Email Address"
        android:inputType="textEmailAddress"
        android:focusable = "true"
        android:layout_marginTop = "48dp"
        android:layout_below="@+id/idtxtLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/idEditPassword"
        android:layout_below="@+id/idEditEmailAd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/idEditEmailAd"
        android:layout_alignEnd="@+id/idEditEmailAd"
        android:hint="Password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not registered yet? Sign up"
        android:id="@+id/idRegisterLink"
        android:padding="16dp"
        android:layout_below="@id/idEditPassword"
        android:textColor="#4DA6FF" />

    <Button
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_width="90dp"
        android:id="@+id/idBtnLogin"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/idtxtLogin"
        android:layout_below="@+id/idRegisterLink" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/idBtnCancel"
        android:textSize="15sp"
        android:onClick="btnCancelClick"
        android:layout_below="@+id/idRegisterLink"
        android:layout_toRightOf="@+id/idtxtLogin"
        android:layout_toEndOf="@+id/idtxtLogin" />
</RelativeLayout>